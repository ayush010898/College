import string
from random import *

ch = int(input("enter 1.new password 2.exit"))
while ch != 2 :
    size = int(input('Enter the password length '))
    characters = string.ascii_letters + string.punctuation  + string.digits
    password =  "".join(choice(characters) for x in range(size))
    print (password)
    ch = int(input("enter 1.new password 2.exit"))
